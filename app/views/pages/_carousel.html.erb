<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <%(Recipe.all.length-1).times do |x|%>
    <li data-target="#myCarousel" data-slide-to="<%=x%>"></li>
    <%end%>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active" style="background-image: url(<%=Recipe.first.cover_photo.url%>)">
<!--       <div class="carousel-caption">
        <h2><%=Recipe.first.title%></h2>
        <p class= 'carousel-text'>LA is always so much fun!</p>
      </div> -->
    </div>
    <%Recipe.all[1..-1].each do |r|%>
    <div class="item" style="background-image: url(<%=r.cover_photo.url%>)">
<!--       <div class="carousel-caption">
        <h2><%=r.title%></h2>
        <p class= 'carousel-text'>LA is always so much fun!</p>
      </div> -->
    </div>
    <%end%>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

